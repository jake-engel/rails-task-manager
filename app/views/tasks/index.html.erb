<h1>
  Tasks
</h1>
<%= link_to 'New Task', new_task_path %>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <strong>
      <%= link_to task.name, task_path(task) %>
    </strong>
    <% if task.completed %>
    [X]
    <% else %>
    [ ]
    <% end %>
    <%= link_to 'edit', edit_task_path(task) %>
    -
    <%= link_to 'delete', task_path(task), method: 'delete', data: { confirm: 'Are you sure you want to delete this task?' } %>
  </li>
  <% end %>
</ul>
